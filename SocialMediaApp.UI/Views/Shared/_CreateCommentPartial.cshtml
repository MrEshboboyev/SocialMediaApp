@model CommentDTO

<div class="mt-4">
    <h5>Add a Comment</h5>
    <!-- Bind the form to the CreateCommentDTO model -->
    <form asp-controller="Comment" asp-action="Create" method="post">
        <div class="form-group">
            <!-- Use asp-for to bind the PostId and Content fields to the model -->
            <input type="hidden" asp-for="PostId" />
            <textarea class="form-control" asp-for="Content" rows="3" placeholder="Write a comment..." required></textarea>
        </div>
        <div class="d-grid mt-3">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-send"></i> Post Comment
            </button>
        </div>
    </form>
</div>